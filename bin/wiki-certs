#!/usr/bin/env bash

exec >>/var/log/wiki-certs.log 2>&1

echo "$(date)"

cd "/hyperbola/tls/wiki.hyperbo.la"
sg www-data "/hyperbola/tools/letsencrypt.sh/letsencrypt.sh --cron"

echo "Exit code from letsencrypt.sh: $?"

umask 0037
chmod -R g+rX "/hyperbola/tls/wiki.hyperbo.la/certs"

sleep 30

systemctl reload nginx
