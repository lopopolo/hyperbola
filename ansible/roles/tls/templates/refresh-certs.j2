#!/usr/bin/env bash

PATH="/hyperbola/tools/venv/bin:$PATH"
export PATH

echo "Begin renewal attempt at: $(date)"

sg www-data "/hyperbola/tools/dehydrated/dehydrated --cron --config /hyperbola/tools/tls/{{ tls_domain }}/config"

echo "Exit code from dehydrated: $?"

umask 0037
chmod -R g+rX "/hyperbola/tls/{{ tls_domain }}/certs"
