{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "ansible_vault_password": "{{env `ANSIBLE_VAULT_PASSWORD`}}"
  },
  "builders": [{
    "name": "aws-us-west-2-hyperbola-app",
    "type": "amazon-ebs",
    "region": "us-west-2",
    "vpc_id": "vpc-08d0186e",
    "subnet_id": "subnet-dc043895",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*ubuntu-bionic-18.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "c5.xlarge",
    "spot_price": "0.17",
    "ssh_username": "ubuntu",
    "ssh_timeout": "10m",
    "ami_name": "hyperbola-app {{isotime \"2006-01-02T15:04:05Z07:00\" | clean_ami_name}}",
    "ami_description": "hyperbola-app AMI",
    "run_tags": {
      "ami-create": "aws-us-west-2-hyperbola-app"
    },
    "tags": {
      "ami": "aws-us-west-2-hyperbola-app",
      "Project": "hyperbola",
      "Name": "app",
      "Environment": "production",
      "Version": "0.137.0"
    },
    "associate_public_ip_address": true
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /hyperbola/sdist",
        "sudo chown -R ubuntu /hyperbola/sdist"
      ]
    },
    {
      "type": "file",
      "source": "dist",
      "destination": "/hyperbola/sdist"
    },
    {
      "type": "file",
      "source": "document-root",
      "destination": "/hyperbola/sdist"
    },
    {
      "type": "file",
      "source": "hyperbola",
      "destination": "/hyperbola/sdist"
    },
    {
      "type": "file",
      "source": "MANIFEST.in",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "file",
      "source": "Pipfile",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "file",
      "source": "Pipfile.lock",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "file",
      "source": "README.md",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "file",
      "source": "manage.py",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "file",
      "source": "setup.cfg",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "file",
      "source": "setup.py",
      "destination": "/hyperbola/sdist/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get -y install software-properties-common",
        "sudo apt-add-repository -y ppa:ansible/ansible",
        "sudo apt-get update",
        "sudo apt-get -y install ansible",
        "echo {{user `ansible_vault_password`}} > /tmp/vault-password.txt"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/provision.yml",
      "command": "ANSIBLE_CALLBACK_WHITELIST=profile_tasks ansible-playbook"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/app.yml",
      "playbook_dir": "ansible",
      "inventory_file": "ansible/production.ini",
      "extra_arguments": ["--limit=localhost", "--vault-password-file=/tmp/vault-password.txt"],
      "command": "ANSIBLE_CALLBACK_WHITELIST=profile_tasks ansible-playbook"
    }
  ]
}
