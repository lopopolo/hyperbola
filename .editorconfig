# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[Vagrantfile]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.{yml,yaml}]
indent_size = 2

[*.html]
indent_size = 2

[*.js]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = false

[**/dist/**]
indent_style = ignore
indent_size = ignore

[**.min.{css,js}]
indent_style = ignore
insert_final_newline = false

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
